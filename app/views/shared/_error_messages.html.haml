.row#error_messages
  .col-md-12.col-md-12
    - if object.errors.any?
      .alert.alert-danger.alert-block
        %i.fa.fa-times.pull-right.close_alert{"data-dismiss" => "alert"}
        %br/
        %ul{:style => "padding: 0;"}
          - object.errors.full_messages.each_with_index do |msg, index|
            %li
              = msg
