%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Lenyt

    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'http://maps.google.com/maps/api/js?sensor=false'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    %script{:src => "//cdn.jsdelivr.net/jquery.scrollto/2.1.0/jquery.scrollTo.min.js"}
    %link{ rel: 'shortcut icon', href: image_path("/icon.gif") }
    %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no", :name => "viewport"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
  %body
    %header
      = render partial: 'shared/header', locals: {logo_img: 'logo.png'}
      = render 'layouts/flash_notices'
    %main
      //= render 'shared/flashes'
      = yield
      = render partial: "shared/sign_up_modal"
      = render partial: "shared/login_modal"
      = render partial: "shared/agree_modal"
